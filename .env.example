# YouTube Translation Pipeline Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI Configuration (recommended for best quality)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Cloud Configuration (optional)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google/credentials.json

# Azure Speech Services Configuration (optional)
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus

# Azure Translator Configuration (optional)
AZURE_TRANSLATOR_KEY=your-azure-translator-key
AZURE_TRANSLATOR_REGION=global

# Pipeline Configuration
DEFAULT_TARGET_LANGUAGE=es
DEFAULT_TTS_ENGINE=openai
OUTPUT_DIRECTORY=./output
TEMP_DIRECTORY=./temp

# Processing Configuration
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
ENABLE_METRICS=false

# Feature Flags
ENABLE_CACHING=true
ENABLE_HEALTH_CHECKS=true
KEEP_TEMP_FILES=false

# Video Processing Settings
AUDIO_FORMAT=wav
VIDEO_QUALITY=720p
MAX_VIDEO_DURATION=3600